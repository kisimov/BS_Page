<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 text-center">
      <br> <br> <br>
      <hr class="primary">    
      <h2 class="margin-top-0 wow fadeIn">Contact</h2>
        <hr class="primary">
        <p>We love feedback. Fill out the form below and we'll get back to you as soon as possible.</p>
    </div>

        <%= form_for :contact, url: contacts_path do |f| %>

          <% if @contact && @contact.errors.any? %>

            <p>
              <% @contact.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
            <% end %>
          </p>
        <% end %>


    <div class="col-lg-10 col-lg-offset-1 text-center">
      <form class="contact-form row">
        
        <div class="col-md-4">
        <label></label>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        </div>

        <div class="col-md-4">
        <label></label>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="col-md-4">
        <label></label>
        <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone' %>
        </div>
 
        <div class="col-md-12">
        <label></label>
        <%= f.text_area :message, class: 'form-control', placeholder: 'Your message here..', rows: 9 %>
        </div>

        <div class="col-md-4 col-md-offset-4">
          <label></label>
           <%= f.submit 'Send Message', class: 'btn btn-primary btn-block btn-lg' %>
        </div>

      </form>
    </div>
  </div>
</div>

<% end %>

