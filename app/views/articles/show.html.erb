<div class="container">
	<div class="row">
		<div class="col-md-8 col-sm-8 col-xs-12">

			<h1><%= @article.title %></h1>
			<p>posted by <%= @article.post_author %> </p>
			<h2>
				<hr>
				<%= @article.text %>
				<hr>
			</h2>

			<hr>

			<h4>Comments</h4>
			<% @article.comments.each do |comment| %>
				<p>
					<i> <%= comment.author %> said:	</i><br />
					<%= comment.body %>

				</p>
				<br />
			<% end %>

			<h5>Add comment:</h5>
			
			<%= form_for([@article, @article.comments.build]) do |f| %>

			
			<div class="col-md-12">
	        <label></label>
	        <%= f.text_area :body, class: 'form-control', placeholder: 'Your comment here..', rows: 3 %>
	        </div>
				

	        <div class="col-md-4 col-md-offset-4">
	          <label></label>
	           <%= f.submit 'Comment!', class: 'btn btn-primary btn-block btn-lg' %>
	        </div>

			
			<% end %>

		</div>
	</div>
</div>