<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 text-center">
      <br> <br> <br>
      <hr class="primary">    
      <h1 class="margin-top-0 wow fadeIn">New article</h1>
        <hr class="primary">
       </div>


			<%= form_for :article, url: articles_path do |f| %>
			

	<div class="col-lg-10 col-lg-offset-1 text-center">
     	 <form class="contact-form row">
			
				<div class="col-md-12">
		        <label></label>
				<%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
				</div>
			
				<div class="col-md-12">
		        <label></label>
		        <%= f.text_area :text, class: 'form-control', placeholder: 'Your article here..', rows: 6 %>
		        </div>

		        <div class="col-md-4 col-md-offset-4">
		        <label></label>
		        <%= f.submit 'Post it now!', class: 'btn btn-primary btn-block btn-lg' %>
		        </div>

		    </form>
        </div>
    </div>
</div>

<% end %>